{
  "name": "dependency-cruiser-report-action",
  "version": "2.4.0",
  "private": true,
  "description": "visualize dependenices of changed files in each pull request.",
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MH4GF/dependency-cruiser-report-action.git"
  },
  "license": "MIT",
  "author": "",
  "main": "lib/main.js",
  "scripts": {
    "all": "npm run build && npm run format && npm run lint && npm test",
    "build": "tsc",
    "coverage": "vitest run --coverage",
    "format": "biome format --write .",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint src",
    "lint:biome": "biome ci .",
    "package": "ncc build src/main.ts --source-map --license licenses.txt",
    "test": "vitest"
  },
  "prettier": "@mh4gf/configs/prettier",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@mh4gf/configs": "^0.3.0",
    "@mh4gf/eslint-config": "0.5.0",
    "@tsconfig/strictest": "^2.0.2",
    "@types/node": "^20.10.1",
    "@vercel/ncc": "^0.38.1",
    "dependency-cruiser": "15.4.0",
    "eslint": "^8.56.0",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6",
    "vitest": "^0.32.0"
  }
}
