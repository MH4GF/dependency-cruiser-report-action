{
  "name": "dependency-cruiser-report-action",
  "version": "2.1.0",
  "private": true,
  "description": "visualize dependenices of changed files in each pull request.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build src/main.ts --source-map --license licenses.txt",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MH4GF/dependency-cruiser-report-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "*",
    "@actions/exec": "*",
    "@actions/github": "*",
    "yup": "*"
  },
  "devDependencies": {
    "@mh4gf/eslint-config": "0.5.0",
    "@mh4gf/prettier-config": "^0.2.0",
    "@types/node": "*",
    "@vercel/ncc": "*",
    "dependency-cruiser": "*",
    "eslint": "*",
    "husky": "*",
    "js-yaml": "*",
    "lint-staged": "*",
    "prettier": "*",
    "typescript": "*",
    "vitest": "*"
  },
  "prettier": "@mh4gf/prettier-config",
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "yarn format"
    ]
  }
}
